<body>
    <div class="container">
        <div class="header">
            <h1>HTML代码托管工具</h1>
            <p>输入HTML代码，自动生成可分享的短链接</p>
        </div>
        
        <div class="editor-container">
            <div class="editor-panel">
                <h2>代码编辑器</h2>
                <textarea id="html-code" placeholder="在此输入HTML代码...">&lt;!DOCTYPE html&gt;
&lt;html&gt;
&lt;head&gt;
    &lt;title&gt;示例页面&lt;/title&gt;
    &lt;style&gt;
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            background-color: #f0f8ff;
        }
        h1 {
            color: #4285f4;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    &lt;/style&gt;
&lt;/head&gt;
&lt;body&gt;
    &lt;div class="container"&gt;
        &lt;h1&gt;欢迎使用HTML托管工具&lt;/h1&gt;
        &lt;p&gt;这是一个示例HTML页面。编辑左侧代码，右侧将实时显示预览效果。&lt;/p&gt;
    &lt;/div&gt;
&lt;/body&gt;
&lt;/html&gt;</textarea>
            </div>
            
            <div class="preview-panel">
                <h2>实时预览</h2>
                <iframe id="preview" class="preview-frame"></iframe>
            </div>
        </div>
        
        <div class="controls">
            <input type="text" id="share-url" class="url-display" readonly placeholder="短链接将在此显示...">
            <button id="generate-btn">生成短链接</button>
            <button id="copy-btn">复制链接</button>
        </div>
        <div id="status" class="status"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const htmlCode = document.getElementById('html-code');
            const preview = document.getElementById('preview');
            const generateBtn = document.getElementById('generate-btn');
            const copyBtn = document.getElementById('copy-btn');
            const shareUrl = document.getElementById('share-url');
            const status = document.getElementById('status');
            
            // 初始预览
            updatePreview();
            
            // 监听代码变化
            htmlCode.addEventListener('input', updatePreview);
            
            // 生成并缩短链接
            generateBtn.addEventListener('click', async function() {
                try {
                    // 显示状态
                    showStatus('正在生成短链接...', 'info');
                    generateBtn.disabled = true;
                    generateBtn.textContent = '生成中...';
                    
                    const htmlContent = htmlCode.value;
                    if (!htmlContent.trim()) {
                        throw new Error('请输入HTML代码');
                    }
                    
                    // 创建Data URL
                    const dataUrl = `data:text/html;charset=utf-8,${encodeURIComponent(htmlContent)}`;
                    
                    // 使用TinyURL API缩短链接
                    const tinyurlResponse = await fetch(`https://tinyurl.com/api-create.php?url=${encodeURIComponent(dataUrl)}`);
                    
                    if (tinyurlResponse.ok) {
                        const shortUrl = await tinyurlResponse.text();
                        
                        // 验证缩短后的链接是否有效
                        if (shortUrl && shortUrl.startsWith('http')) {
                            shareUrl.value = shortUrl;
                            showStatus('短链接生成成功！', 'success');
                        } else {
                            throw new Error('缩短服务返回无效链接');
                        }
                    } else {
                        throw new Error('缩短链接失败，状态码: ' + tinyurlResponse.status);
                    }
                } catch (error) {
                    console.error('生成短链接错误:', error);
                    
                    // 尝试备用缩短服务
                    try {
                        showStatus('尝试备用缩短服务...', 'info');
                        
                        const htmlContent = htmlCode.value;
                        const dataUrl = `data:text/html;charset=utf-8,${encodeURIComponent(htmlContent)}`;
                        
                        // 使用is.gd作为备用缩短服务
                        const isgdResponse = await fetch(`https://is.gd/create.php?format=simple&url=${encodeURIComponent(dataUrl)}`);
                        
                        if (isgdResponse.ok) {
                            const shortUrl = await isgdResponse.text();
                            if (shortUrl && shortUrl.startsWith('http')) {
                                shareUrl.value = shortUrl;
                                showStatus('短链接生成成功（使用备用服务）！', 'success');
                            } else {
                                throw new Error('备用缩短服务返回无效链接');
                            }
                        } else {
                            throw new Error('备用缩短服务也失败了');
                        }
                    } catch (fallbackError) {
                        console.error('备用缩短服务错误:', fallbackError);
                        showStatus('生成失败，使用原始链接: ' + error.message, 'error');
                        
                        // 如果缩短失败，仍然显示原始Data URL
                        const dataUrl = `data:text/html;charset=utf-8,${encodeURIComponent(htmlCode.value)}`;
                        shareUrl.value = dataUrl;
                    }
                } finally {
                    generateBtn.disabled = false;
                    generateBtn.textContent = '生成短链接';
                    // 5秒后隐藏状态消息
                    setTimeout(() => {
                        status.style.display = 'none';
                    }, 5000);
                }
            });
            
            // 复制链接
            copyBtn.addEventListener('click', function() {
                if (!shareUrl.value) {
                    showStatus('请先生成链接！', 'error');
                    return;
                }
                
                shareUrl.select();
                document.execCommand('copy');
                
                // 显示复制成功状态
                showStatus('链接已复制到剪贴板！', 'success');
                
                // 3秒后隐藏状态消息
                setTimeout(() => {
                    status.style.display = 'none';
                }, 3000);
            });
            
            // 更新预览
            function updatePreview() {
                const htmlContent = htmlCode.value;
                preview.srcdoc = htmlContent;
            }
            
            // 显示状态消息
            function showStatus(message, type) {
                status.textContent = message;
                status.className = 'status';
                status.classList.add(type);
                status.style.display = 'block';
            }
        });
    </script>
</body>
</html>
