        }
        .editor-container {
            display: flex;
            flex-wrap: wrap;
        }
        .editor-panel, .preview-panel {
            flex: 1;
            min-width: 300px;
            padding: 20px;
        }
        textarea {
            width: 100%;
            height: 400px;
